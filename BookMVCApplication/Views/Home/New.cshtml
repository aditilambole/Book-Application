@model  BookMVCApplication.Models.Book
@{
    ViewBag.Title = "Add New book";
}
<br />
@using (Html.BeginForm("NewBook", "Home"))//action method ka nam create hoyga
{
    <div class="form-group">
        @Html.LabelFor(m => m.BookName)
        @Html.TextBoxFor(m => m.BookName, new { @class = "form-control" })
    </div>
    <button class="btn btn-primary" type="submit">save</button>
    @Html.ActionLink("Save", "NewBook", new { @class = "btn btn-primary" })
}




